<div class="relative">
    <div class="absolute -left-6 md:left-0 z-20 w-full h-[calc(100%_-_7.5rem)] grid-cols-12 gap-5 top-24 md:top-[7.5rem] grid lg:gap-10">
        <div class="relative col-span-12 md:col-span-8 md:col-start-5 bg-gradient-to-b from-secondary-default to-white-default rounded-2xl"></div>
        <div class="absolute w-[50vw] h-full top-0 right-[-50vw] bg-gradient-to-b from-secondary-default"></div>
    </div>
    <div class="relative z-30 grid grid-cols-12 gap-5 lg:gap-10">
        <div class="col-span-12 md:col-start-6 md:col-span-7">
            <div class="p-4 pb-0 md:p-8 bg-white-default rounded-tr-2xl rounded-tl-2xl">
                <div class="relative flex items-end mb-4 md:block">
                    <span class="text-[90px] md:text-[150px] transform translate-y-[7px] md:translate-y-0 text-stroke leading-none">
                        {{ loop.index }}.
                    </span>
                    <span class="font-medium text-31 md:!text-48 md:absolute md:top-1/2 transform md:-translate-y-1/2 translate-x-2 md:-translate-x-6">
                        {{ step.itemTitle }}
                    </span>
                </div>
                <div class="prose max-w-none md:prose-md">
                    {{ step.itemText }}
                </div>
            </div>
        </div>
    </div>
</div>
