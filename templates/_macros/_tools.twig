{% macro button(url, label,style, icon, target) %}
    <a href="{{ url }}" {% if target == '_blank'%} target="_blank" rel="nofollow" {% endif%} class="d-inline-block text-start btn text-uppercase fw-regular btn border-0 {{ style }}">
        <span class="d-inline-flex position-relative z-index-10 {{ icon ? 'me-4' }}">{{ label }}</span>
        {% if icon and icon.extension == 'svg' %}
            {{ svg(icon)|attr({ class: 'btn-icon' }) }}
        {% endif %}
    </a>
{% endmacro %}
