{% macro button(url, label, style, arrowBgStyle, target=false) %}
    <a href="{{ url }}" {% if target == '_blank'%} target="_blank" rel="nofollow" {% endif %} class="btn relative group inline-flex {{ style }}">
        <span class="lg:group-hover:text-white-default relative z-10 self-center transition transform lg:group-hover:translate-x-3"> {{ label }}</span>
        <div class="hidden lg:flex items-center justify-center min-w-[39px] w-[39px] h-[39px] rounded-xl ml-4 absolute top-2 right-3 transition-all lg:group-hover:w-[calc(100%_-_24px)] {{ arrowBgStyle }}">
        </div>
        <div class="flex items-center justify-center min-w-[39px] w-[39px] h-[39px] relative overflow-hidden rounded-xl ml-4 {{ arrowBgStyle }} ">
            {{
                svg('img/svg/arrow-right.svg')|attr({
                    class: ''
                })
            }}
        </div>
    </a> 
{% endmacro %}