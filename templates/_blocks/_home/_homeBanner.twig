<div class="pt-8 lg:h-[calc(100vh_-_100px)] bg-bg-default flex items-center overflow-hidden lg:max-h-[1024px]">
    <div class="container grid grid-cols-12 h-full">
        <div class="col-span-11 lg:col-span-5 xl:col-span-7 flex flex-col self-center transform lg:-translate-y-1/2">
            <span class="inline-flex items-start md:items-center font-light text-copy text-white-default inline-block mb-4">
                {{
                    svg('img/svg/emojione_waving-hand.svg')|attr({
                        class: 'w-[29px] h-[29px] mr-2'
                    })
                }}
                Hi, ik ben Angelo Keirsebilck,
                <br />
            </span>
            <span class="mb-2 inline-block text-[40px] lg:text-[61px] leading-[50px] lg:leading-[70px] font-semibold bg-clip-text text-transparent bg-gradient-to-r from-primary-default to-secondary-default self-start">
                Freelance <br /> web developer
            </span>
            <span class="inline-block text-[30px] lg:text-[45px] leading-[38px] lg:leading-[60px] text-white-default font-light">
                met een passie voor <br /> design en
                <span class="relative whitespace-nowrap">
                    <span class="relative z-20">JavaScript</span>
                    {{
                        svg('img/svg/underline.svg')|attr({
                            class: 'absolute bottom-0 left-0 w-full h-2 lg:h-3 z-10'
                        })
                    }}
                    {{
                        svg('img/svg/swirl1.svg')|attr({
                            class: 'absolute -bottom-16 left-2 md:left-5'
                        })
                    }}
                    <div class="flex absolute -bottom-14 left-24 md:left-28">
                        {% for img in block.itemJsIcons.all() %}
                            <img src="{{
                                img.getUrl({
                                    format: 'webp'
                                })
                                }}"
                                class=" min-w-[34px] min-h-[30px] {{
                                not loop.first
                                    ? 'ml-2'
                                }}"
                                height="30"
                                width="34"
                                type="image/webp"
                                alt="{{ img.alt ? img.alt : img.title }}" />
                        {% endfor %}
                        {# {{ svg('img/svg/react-icon.svg')|attr({ #}
                        {# class: 'h-[30px]' #}
                        {# }) }} #}
                        {# {{ svg('img/svg/vue-icon.svg')|attr({ #}
                        {# class: 'ml-2 h-[30px]' #}
                        {# }) }} #}
                    </div>
                </span>
            </span>
        </div>
        <div class="col-span-8 col-start-3 lg:col-span-7 xl:col-span-5 self-end mt-28">
            <div class="relative">
                {% set optimizedImage =
                    block.itemPortrait.one().fieldHomePortraitImgOpt
                %}
                <picture>
                    <source srcset="{{ optimizedImage.srcsetWebP() }}"
                        sizes="100vw"
                        type="image/webp" />
                    <img src="{{ optimizedImage.src() }}"
                        srcset="{{ optimizedImage.srcset() }}"
                        sizes="(max-width: 375) 222px, (max-width: 640) 400px, (max-width: 768) 484px, (max-width: 1024) 508px, (max-width: 1280) 509px, 576px"
                        class="relative z-10 max-h-[40rem] xl:max-h-[initial]"
                        width="{{ block.itemPortrait.one().getWidth() }}"
                        height="{{ block.itemPortrait.one().getHeight() }}"
                        alt="{{
                        block.itemPortrait.one().alt
                            ? block.itemPortrait.one().alt
                            : block.itemPortrait.one().title
                        }}" />
                </picture>

                {# <img src="/img/agkiz-8o5wp.webp" #}
                {# alt="Angelo Keirsebilck Portret" #}
                {# width="491" #}
                {# height="619" #}
                {# class="relative z-10" /> #}
                <div class="absolute top-32 -left-4 w-72 h-72 bg-primary-default rounded-full filter blur-circle opacity-50 animate-blob"></div>
                <div class="absolute top-32 -right-4 w-80 h-60 bg-secondary-default rounded-full filter blur-circle opacity-50 animate-blob animation-delay-2000"></div>
                <div class="absolute -bottom-8 left-20 w-96 h-56 bg-tertiary-default rounded-full filter blur-circle opacity-50 animate-blob animation-delay-4000"></div>
            </div>
        </div>
    </div>
</div>

