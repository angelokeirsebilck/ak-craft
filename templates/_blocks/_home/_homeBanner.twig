{% import '_macros/_tools.twig' as macros %}

<div class="lg:h-[calc(100vh_-_125px)] overflow-hidden lg:max-h-[1024px]">
    <div class="container relative h-full flex items-center">
        <div class="grid grid-cols-12 lg:gap-10 absolute right-5 lg:right-10 bottom-0 w-full h-[63px]">
            <div class="col-span-12 bg-quaternary-default bg-opacity-30 z-20 rounded-tr-2xl relative">
                <div class="absolute w-[50vw] h-[63px] bottom-0 left-[-50vw] bg-quaternary-default bg-opacity-30"></div>
            </div>
        </div>

        <div class="grid grid-cols-12 lg:gap-10 absolute top-0 left-10 w-full h-full">
            <div class="col-span-10 md:col-span-9 bg-tertiary-default rounded-tr-2xl relative">
                <div class="absolute w-[50vw] h-full top-0 left-[-50vw] bg-tertiary-default"></div>
            </div>
        </div>
        <div class="grid grid-cols-12 lg:gap-10 relative z-10 py-8 pb-24 lg:py-0">
            <div class="col-span-10 lg:col-span-7 flex flex-col">
                <h1 class="text-40 lg:text-56 font-medium mb-6">
                    {{ block.itemTitle }}
                </h1>
                <span class="text-24 max-w-[700px]">{{ block.itemIntro }}</span>
                {% if block.itemLink.getLink() %}
                    <div class="mt-8">
                        {{ macros.button(block.itemLink.getUrl(), block.itemLink.getText(), 'btn-primary', 'bg-primary-default') }}
                    </div>
                {% endif %}
            </div>
            <div class="col-span-12 lg:col-span-5 flex items-center mt-16 lg:mt-0">
                {% if block.itemFigure.one() %}
                    {% set optimizedImage = block.itemFigure.one().fieldHomeFigureImgOpt %}
                    <picture>
                        <source srcset="{{ optimizedImage.srcsetWebP() }}" sizes="{{ sizes }}" type="image/webp" />
                        <img src="{{ optimizedImage.src() }}" srcset="{{ optimizedImage.srcset() }}" sizes="{{ sizes }}" />
                    </picture>
                {% endif %}
            </div>
        </div>
    </div>
</div>
